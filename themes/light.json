{
  "$schema": "vscode://schemas/color-theme",
  "type": "light",
  "name": "HCO-light-saturated",
  "include": "./default/light_modern.json",
  "colors": {
    // ======================================================
    // BACKGROUND
    // ======================================================
    // Editor background
    "editor.background": "#f7f7f7",
    // Sidebar background
    "sideBar.background": "#f7f7f7",
    // Tabs background
    "tab.activeBackground": "#f7f7f7",
    // Terminal background
    "panel.background": "#f7f7f7",
    // ======================================================
    // FOREGROUND
    // ======================================================
    "editor.foreground": "#090707",
    // ======================================================
    // TABS
    // ======================================================
    // Inactive tab
    "tab.inactiveBackground": "#d9d9d9",
    // Tabs bar background
    "editorGroupHeader.tabsBackground": "#cfcfcf",
    // Inactive tab's text
    "tab.inactiveForeground": "#333333b3",
    // ======================================================
    // BORDERS
    // ======================================================
    "sideBar.border": "#C7C7C7",
    "panel.border": "#C7C7C7",
    // ======================================================
    // SELECTION
    // ======================================================
    "editor.selectionBackground": "#a8d4ff",
    "editor.selectionHighlightBackground": "#a8d4ff70",
    // ======================================================
    // BRACKETS AND BRACKET GUIDES
    // ======================================================
    // HTML scope ruler
    "editorIndentGuide.activeBackground1": "#090707",
    "editorBracketHighlight.foreground1": "#090707",
    "editorBracketHighlight.foreground2": "#090707",
    "editorBracketHighlight.foreground3": "#090707",
    "editorBracketHighlight.foreground4": "#090707",
    "editorBracketPairGuide.activeBackground1": "#090707",
    "editorBracketPairGuide.activeBackground2": "#090707",
    "editorBracketPairGuide.activeBackground3": "#090707",
    "editorBracketPairGuide.activeBackground4": "#090707"
  },
  "tokenColors": [
    {
      "scope": [
        // Comments
        "comment"
      ],
      "settings": {
        "foreground": "#9e9e9e"
      }
    },
    {
      "scope": [
        // JSON property key
        "support.type.property-name.json",
        // CSS property name and media conditions
        "support.type.property-name",
        // Variables inside the template string
        "meta.embedded",
        // Markdown: commands flags
        "constant.other.option",
        // HTML angel brackets
        "punctuation.definition.tag",
        // (BAD!!!!!! Overrides TS parameters) C# (Razor): Variables inside a string
        // "<add_something_here> variable",
        "entity.name.type.module",
        // BAD: Enums are used as type in C#
        // TS: Override color for ENUMs
        // "entity.name.type.enum",
        // TS: Override color for Namespaces
        "entity.name.type.namespace",
        // C#: Override color for "Struct"
        "entity.name.type.struct",
        // C#: Variables inside string
        "variable.other.object.property",
      ],
      "settings": {
        "foreground": "#090707"
      }
    },
    {
      "scope": [
        // const, let, function
        "storage",
        // new, typeof,
        "keyword",
        // Optional operator "?"
        "punctuation.accessor.optional",
        // new
        "keyword.operator.new",
        // typeof
        "keyword.operator.expression",
        // First and last curly braces of variable inside template string
        "punctuation.definition.template-expression.begin",
        "punctuation.definition.template-expression.end",
        // Classes: this, super()
        "variable.language",
        // ==== OPERATORS ====
        // Operators = ! ?
        "keyword.operator",
        // Arrow functions symbol
        "storage.type.function.arrow",
        // TS: Object's key/value colon
        "punctuation.separator.key-value",
        // ==== /OPERATORS ====
      ],
      "settings": {
        // "foreground": "#0013e0" /* Light */
        "foreground": "#000be0"
      }
    },
    {
      "scope": [
        // Minuse/Plus with Numbers/Digits
        "keyword.operator.arithmetic",
        // true/false
        "constant.language",
        // Numbers
        "constant.numeric",
        // Number's following unit
        "keyword.other.unit",
        // CSS: Property value
        "support.constant.property-value",
      ],
      "settings": {
        "foreground": "#0451a5"
      }
    },
    {
      "scope": [
        // ==== CLASSES ONLY ====
        // TS: Class declaration
        "entity.name.type.class",
        // TS: Inherited class
        "entity.other.inherited-class",
        // TS: Promise
        "support.class",
      ],
      "settings": {
        "foreground": "#506795",
      },
    },
    {
      "scope": [
        // User function name
        "entity.name.function",
        // CSS func
        "support.function",
      ],
      "settings": {
        "foreground": "#148fb8" /* Light */
      }
    },
    {
      "scope": [
        // return, import, if/else
        "keyword.control"
      ],
      "settings": {
        "foreground": "#9b61d1" /* Light */
      }
    },
    {
      "scope": [
        // HTML tags
        "entity.name.tag",
        // JSX tags
        "support.class.component",
      ],
      "settings": {
        // "foreground": "#b30000" /* Light */
        "foreground": "#ad0000"
      }
    },
    {
      "scope": [
        // Attributes
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#ce8b7e" /* Light */
      }
    },
    {
      "scope": [
        // Strings
        "string",
        // Markdown: Code in backticks
        "markup.inline.raw"
      ],
      "settings": {
        "foreground": "#3d922a" /* Light */
      }
    },
    {
      "scope": [
        // Markdown: Heading
        "markup.heading",
        // Markdown: Code inside heading
        "markup.heading markup.inline.raw",
        // HTML: Escape sequence (&nbsp;)
        "constant.character"
      ],
      "settings": {
        "foreground": "#a21319"
      }
    },
    {
      "scope": [
        // TS: Function parameters
        "meta.parameters variable.parameter",
        // TS: Parameters of arrow functions
        "meta.arrow variable.parameter",
      ],
      "settings": {
        "foreground": "#ad661f"
      }
    },
    {
      "scope": [
        // TS: Type primitives
        "support.type",
        // TS: All "Types" and "Classes"
        "entity.name.type",
        // TS: Extended interface
        "meta.interface entity.other.inherited-class",
        // TS: Returned type
        // "meta.return.type entity.name.type",
        // TS: Assigning type
        // "meta.type.annotation entity.name.type",
        // TS: Declarating type
        // "meta.type.declaration entity.name.type",
        // TS: Declaring interface
        // "entity.name.type.interface",
        // TS: Extending interface
        // "meta.interface entity.other.inherited-class",
        // C#: Type keywords (not sure)
        // "keyword.type",
      ],
      "settings": {
        // "foreground": "#a09522"
        "foreground": "#9c9121"
      }
    },
    {
      "scope": [
        // Markdown: Heading
        "markup.heading",
        // Markdown: Bold
        "markup.bold"
      ],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        // return, import, if/else
        "keyword.control",
        // Comments
        "comment",
        // Markdown: italic formatting
        "markup.italic"
      ],
      "settings": {
        "fontStyle": "italic"
      }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    // C#: Namespaces
    "namespace": "#090707"
    // TS: Class declaration
    // "class.declaration": "#9A94D1",
    // TS: Class call (create new instance)
    // "class.documentation": "#9A94D1",
    // Parameters
    // "parameter.declaration": "#a56a18",
  }
}
